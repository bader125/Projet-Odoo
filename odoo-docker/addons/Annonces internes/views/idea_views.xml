<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_internal_announcement" model="ir.actions.act_window">
        <field name="name">Gestion des Annonces Internes</field>
        <field name="res_model">internal.announcement</field>
        <field name="view_mode">tree,form,calendar,kanban</field>
        <field name="context">{'default_author_id': uid}</field>
    </record>

    <menuitem id="menu_announcement_root" name="Annonces Internes" sequence="10"/>
    
    <menuitem id="menu_announcement_main" 
              name="Toutes les Annonces" 
              parent="menu_announcement_root" 
              action="action_internal_announcement" 
              sequence="10"/>

    <record id="view_announcement_tree" model="ir.ui.view">
        <field name="name">internal.announcement.tree</field>
        <field name="model">internal.announcement</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'published' and not is_expired" 
                  decoration-danger="state == 'published' and is_expired" 
                  decoration-info="state == 'draft'"
                  decoration-muted="state == 'archived'"
                  decoration-warning="priority == '2'">
                <field name="name"/>
                <field name="title"/>
                <field name="author_id"/>
                <field name="category"/>
                <field name="priority" widget="priority"/>
                <field name="publication_date"/>
                <field name="expiration_date"/>
                <field name="view_count"/>
                <field name="is_expired" invisible="1"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'published'"
                       decoration-danger="state == 'archived'"
                       decoration-info="state == 'draft'"/>
            </tree>
        </field>
    </record>

    <record id="view_announcement_form" model="ir.ui.view">
        <field name="name">internal.announcement.form</field>
        <field name="model">internal.announcement</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_publish" string="Publier" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_archive" string="Archiver" type="object" 
                            invisible="state != 'published'"
                            groups="base.group_user"/>
                    <button name="action_reset_to_draft" string="Remettre en brouillon" type="object" 
                            invisible="state not in ['published', 'archived']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,published,archived"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_increment_view" type="object" 
                                class="oe_stat_button" icon="fa-eye"
                                invisible="state != 'published'">
                            <field name="view_count" widget="statinfo" string="Vues"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="title" placeholder="Entrez le titre de l'annonce..."/>
                            <field name="author_id" readonly="1"/>
                            <field name="creation_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="category"/>
                            <field name="priority" widget="priority"/>
                            <field name="publication_date"/>
                            <field name="expiration_date"/>
                            <field name="is_active" invisible="state == 'draft'"/>
                            <field name="is_expired" readonly="1" invisible="state != 'published'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contenu" name="content">
                            <group>
                                <field name="content" nolabel="1" placeholder="Rédigez le contenu de votre annonce..."/>
                            </group>
                        </page>
                        <page string="Pièces jointes" name="attachments">
                            <group>
                                <field name="attachment_ids" widget="many2many_binary" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_announcement_search" model="ir.ui.view">
        <field name="name">internal.announcement.search</field>
        <field name="model">internal.announcement</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="title"/>
                <field name="content"/>
                <field name="author_id"/>
                <filter string="Mes Annonces" name="my_announcements" domain="[('author_id', '=', uid)]"/>
                <filter string="Publiées" name="published" domain="[('state', '=', 'published')]"/>
                <filter string="Brouillons" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Archivées" name="archived" domain="[('state', '=', 'archived')]"/>
                <filter string="Actives" name="active" domain="[('is_active', '=', True), ('state', '=', 'published')]"/>
                <filter string="Expirées" name="expired" domain="[('is_expired', '=', True)]"/>
                <separator/>
                <filter string="Urgentes" name="urgent" domain="[('priority', '=', '2')]"/>
                <filter string="Importantes" name="important" domain="[('priority', '=', '1')]"/>
                <filter string="Normales" name="normal" domain="[('priority', '=', '0')]"/>
                <separator/>
                <filter string="Information" name="info" domain="[('category', '=', 'information')]"/>
                <filter string="Événement" name="event" domain="[('category', '=', 'event')]"/>
                <filter string="Urgent" name="urgent_cat" domain="[('category', '=', 'urgent')]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Auteur" name="group_author" context="{'group_by': 'author_id'}"/>
                    <filter string="Catégorie" name="group_category" context="{'group_by': 'category'}"/>
                    <filter string="Priorité" name="group_priority" context="{'group_by': 'priority'}"/>
                    <filter string="Statut" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date de publication" name="group_date" context="{'group_by': 'publication_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_announcement_calendar" model="ir.ui.view">
        <field name="name">internal.announcement.calendar</field>
        <field name="model">internal.announcement</field>
        <field name="arch" type="xml">
            <calendar string="Calendrier des Annonces" 
                      date_start="publication_date" 
                      date_stop="expiration_date"
                      color="category"
                      event_open_popup="true"
                      mode="month">
                <field name="title"/>
                <field name="author_id"/>
                <field name="category"/>
                <field name="priority"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <record id="view_announcement_kanban" model="ir.ui.view">
        <field name="name">internal.announcement.kanban</field>
        <field name="model">internal.announcement</field>
        <field name="arch" type="xml">
            <kanban default_order="publication_date desc" class="o_kanban_dashboard">
                <field name="id"/>
                <field name="title"/>
                <field name="author_id"/>
                <field name="category"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="publication_date"/>
                <field name="view_count"/>
                <field name="is_expired"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="title"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="text-muted">
                                        <field name="author_id"/>
                                        <span class="ml-2">|</span>
                                        <field name="category"/>
                                    </div>
                                    <div class="mt-2">
                                        <i class="fa fa-calendar"/> 
                                        <field name="publication_date" widget="date"/>
                                        <span t-if="record.expiration_date.raw_value" class="ml-2">
                                            <i class="fa fa-clock-o"/> 
                                            <field name="expiration_date" widget="date"/>
                                        </span>
                                    </div>
                                    <div class="mt-2">
                                        <i class="fa fa-eye"/> 
                                        <field name="view_count"/> vues
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <field name="state" widget="badge"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
